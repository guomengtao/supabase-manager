{
  "name": "supabase-manager",
  "version": "1.0.0",
  "description": "A comprehensive web application for managing and interacting with Supabase projects",
  "scripts": {
    "start": "live-server --port=8080",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,html,css,md}\"",
    "build": "npm run lint && npm run test && npm run optimize",
    "optimize": "npm run optimize:js && npm run optimize:css",
    "optimize:js": "uglifyjs js/*.js -o js/main.min.js",
    "optimize:css": "cleancss -o styles.min.css styles.css",
    "validate": "npm run lint && npm run test",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guomengtao/supabase-manager.git"
  },
  "keywords": [
    "supabase",
    "database",
    "management",
    "web-app"
  ],
  "author": "guomengtao",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.46.2",
    "bootstrap": "^5.3.0",
    "bootstrap-icons": "^1.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@testing-library/jest-dom": "^6.2.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.min.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
